<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">

        <item name="android:colorPrimary">@color/primary_material_light</item>
        <item name="android:colorPrimaryDark">@color/primary_material_dark</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="android:colorForeground">@color/bright_foreground_material_light</item>
        <item name="android:statusBarColor">@color/primary_material_dark</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="cardForeground">@color/card_foreground</item>
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary_material_light</item>
        <item name="android:colorPrimaryDark">@color/primary_material_dark</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="android:colorForeground">@color/bright_foreground_material_light</item>
        <item name="android:statusBarColor">@color/primary_material_dark</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorPrimary">@color/primary_material_light</item>
        <item name="colorPrimaryDark">@color/primary_material_dark</item>
        <item name="colorAccent">@color/accent_material_light</item>
        <item name="cardForeground">@color/card_foreground</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="toolbarTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FimAppCompatTheme" parent="AppCompatTheme">
        <item name="android:colorPrimary">@color/fim_primary_light</item>
        <item name="android:colorPrimaryDark">@color/fim_primary_dark</item>
        <item name="android:colorAccent">@color/fim_accent_light</item>
        <item name="android:statusBarColor">@color/fim_primary_dark</item>
        <item name="android:windowBackground">@color/fim_window_background</item>
        <item name="cardForeground">@color/fim_card_foreground</item>
        <item name="colorPrimary">@color/fim_primary_light</item>
        <item name="colorPrimaryDark">@color/fim_primary_dark</item>
        <item name="colorAccent">@color/fim_accent_light</item>
        <item name="android:navigationBarColor">@color/fim_primary_dark</item>
    </style>

    <style name="FimAppTheme" parent="AppTheme">
        <item name="android:colorPrimary">@color/fim_primary_light</item>
        <item name="android:colorPrimaryDark">@color/fim_primary_dark</item>
        <item name="android:colorAccent">@color/fim_accent_light</item>
        <item name="android:statusBarColor">@color/fim_primary_dark</item>
        <item name="android:windowBackground">@color/fim_window_background</item>
        <item name="cardForeground">@color/fim_card_foreground</item>
        <item name="android:navigationBarColor">@color/fim_primary_dark</item>
    </style>

    <style name="NightAppTheme" parent="android:Theme.Material">
        <item name="cardForeground">@color/night_card_foreground</item>
        <item name="android:colorPrimary">@color/primary_night</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_night</item>
        <item name="android:colorAccent">@color/accent_night</item>
    </style>

    <style name="NightAppCompatTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="cardForeground">@color/night_card_foreground</item>
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryDark">@color/primary_dark_night</item>
        <item name="colorAccent">@color/accent_night</item>
    </style>
</resources>